<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net48</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <LangVersion>13</LangVersion>
        <PackageId>FuseCP.UniversalInstaller.Runtime</PackageId>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>

    <PropertyGroup Condition="$(TargetFramework) == 'net48'">
        <AssemblyName>FuseCP.UniversalInstaller.Runtime.NetFX</AssemblyName>
    </PropertyGroup>
    <PropertyGroup Condition="$(TargetFramework) == 'net10.0'">
        <AssemblyName>FuseCP.UniversalInstaller.Runtime.NetCore</AssemblyName>
    </PropertyGroup>

    <ItemGroup Condition="$(TargetFramework) == 'net48'">
        <Reference Include="System.ServiceModel" />
        <Reference Include="System.Management" />
        <Reference Include="System.Net.Http" />
    </ItemGroup>
    <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
        <PackageReference Include="System.ServiceModel.Primitives" Version="10.0.2" />
        <PackageReference Include="System.ServiceModel.Http" Version="10.0.2" />
        <PackageReference Include="System.Management" Version="10.0.2" GeneratePathProperty="true" IncludeAssets="None" ExcludeAssets="All" PrivateAssets="None" />
        <PackageReference Include="System.Runtime.Loader" Version="4.3.0" />
    </ItemGroup>
    <ItemGroup>
        <Reference Include="System.Management">
            <HintPath>$(PkgSystem_Management)\runtimes\win\lib\net10.0\System.Management.dll</HintPath>
            <Private>True</Private>
        </Reference>
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\..\..\FuseCP\Sources\FuseCP.EnterpriseServer.Data\FuseCP.EnterpriseServer.Data.csproj" />
      <ProjectReference Include="..\FuseCP.UniversalInstaller.Core\FuseCP.UniversalInstaller.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Compile Include="..\FuseCP.UniversalInstaller\AssemblyLoader.cs" />
    </ItemGroup>

    <Target Name="CopySystemManagement" AfterTargets="CopyFilesToOutputDirectory" Condition="'$(TargetFramework)' == 'net10.0'">
        <ItemGroup>
            <MgmtDll Include="$(PkgSystem_Management)\runtimes\win\lib\net10.0\System.Management.*" />
        </ItemGroup>
        <Copy SourceFiles="@(MgmtDll)" DestinationFolder="$(OutputPath)" />
    </Target>
</Project>
